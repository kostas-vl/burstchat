      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="5.6.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BurstChat.Application\BurstChat.Application.csproj" />
    <ProjectReference Include="..\BurstChat.Infrastructure\BurstChat.Infrastructure.csproj" />
    <ProjectReference Include="..\BurstChat.Domain\BurstChat.Domain.csproj" />
  </ItemGroup>

</Project>
